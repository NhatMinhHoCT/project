SELECT *
FROM bonus
WHERE AppliedDate BETWEEN :startDate AND :endDate
   OR AppliedDate = (
      SELECT MAX(AppliedDate)
      FROM bonus
      WHERE AppliedDate < :startDate
   )
   OR AppliedDate = (
      SELECT MIN(AppliedDate)
      FROM bonus
      WHERE AppliedDate > :endDate
   )
ORDER BY AppliedDate;
